apiVersion: apps/v1
kind: Deployment
metadata:
  name: product-checkout-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: product-checkout
  template:
    metadata:
      labels:
        app: product-checkout
    spec:
      containers:
      - name: product-checkout
        image: <image-name>
        ports:
        - containerPort: 3005
        env:
        - name: MONGO_URI
          value: "mongodb://mongo:27017"

---

apiVersion: v1
kind: Service
metadata:
  name: product-checkout-service
spec:
  selector:
    app: product-checkout
  ports:
  - protocol: TCP
    port: 3005
    targetPort: 3005